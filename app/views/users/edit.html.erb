<p id="notice"></p>
<div class="container">
  <% if @user.errors.any? %>
    <%= @user.errors.count %>errors
    <% @user.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
  <div class="row">
    <div class="col-sm-11 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
          <p><%= f.text_field :name, class:"form-control" %></p>
        </div>
        <div class="form-group">
          <label for="user_image">Image</label>
          <p><%= f.attachment_field :profile_image %></p>
        </div>
        <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <p><%= f.text_area :introduction, class:"form-control" %></p>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class:"btn btn-secondary" %>
        </div>

       <% end %>
    </div>
  </div>
</div>