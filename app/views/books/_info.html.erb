<script src="https://kit.fontawesome.com/d7e16e1f0b.js" crossorigin="anonymous"></script>

    <p id="notice"></p>
    <h2>User info</h2>

    <table class="table">
      <tbody>
        <tr>
          <%= attachment_image_tag user, :profile_image_id, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
        </tr>
        <tr>
          <th>name</th>
          <td><%= user.name %></td>
        </tr>
        <tr>
          <th>introduction</th>
          <td><%= user.introduction %></td>
        </tr>
        <tr>

          <td><%=link_to "",  edit_user_path(user.id), class:"btn btn-outline-secondary btn-block fas fa-user-cog" %></td>

        </tr>
      </tbody>
    </table>

    <h2 class="mt-3">New book</h2>
    <form action="/books" accept-charset="UTF-8" method="post">

      <%= form_with model: book, local:true do |f| %>
      <div class="form-grop">
        <label for="book_title">Title</label>
        <p><%= f.text_field :title %></p>
      </div>
      <div class="form-grop">
        <label for="book_opinion">Opinion</label>
        <p><%= f.text_area :body %></p>
        <%= f.submit "Create Book", class:"btn btn-success" %>
      </div>
      <% end %>

