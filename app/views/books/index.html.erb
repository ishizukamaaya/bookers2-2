<div class="container px-5 px-sm-0">
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<div class="row">
  <div class="col-md-3">
    <%= render 'books/info',book: @book, user: @user %>
  </div>
    <div class="col-md-8 offset-md-1">
      <p id="notice"></p>
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>

          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user_id) do %>
               <%= attachment_image_tag @user, :profile_image_id, format: 'jpeg', fallback: "no_image.jpg",size:"40x40" %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id)%></td>
            <td><%= book.body %></td>


            <td><%= render "favorites/favorite", book: book %></td>
            <td>コメント数: <%= book.book_comments.count %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
</div>
</div>
